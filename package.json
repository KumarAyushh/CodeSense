{
  "name": "codesense-ai",
  "displayName": "CodeSense AI - Code Reviewer & Assistant",
  "description": "AI-powered code reviewer with multi-provider support (Gemini, OpenAI). Get intelligent code suggestions, reviews, and automated fixes with visual diff comparisons.",
  "version": "1.0.4",
  "publisher": "KumarAyushh",
  "icon": "media/iconMain.png",
  "galleryBanner": {
    "color": "#1f4fd8",
    "theme": "dark"
  },
  "keywords": [
    "ai",
    "code-review",
    "gemini",
    "openai",
    "chatgpt",
    "assistant",
    "code-assistant",
    "refactoring",
    "diff",
    "code-quality"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lec7-container",
          "title": "CodeSense AI",
          "icon": "media/codesense.svg"
        }
      ]
    },
    "views": {
      "lec7-container": [
        {
          "type": "webview",
          "id": "lec7.chatView",
          "name": "AI Chat",
          "icon": "media/codesense.svg"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KumarAyushh/CodeSense.git"
  },
  "bugs": {
    "url": "https://github.com/KumarAyushh/CodeSense/issues"
  },
  "homepage": "https://github.com/KumarAyushh/CodeSense#readme",
  "scripts": {
    "lint": "eslint ."
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "dotenv": "^17.2.3",
    "openai": "^6.15.0",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "eslint": "^8.41.0"
  }
}
